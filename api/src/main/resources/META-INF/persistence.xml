<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="default">
        <!-- Cart Entities -->
        <class>com.flower.cart.domain.Cart</class>
        <class>com.flower.cart.domain.CartItem</class>
        <class>com.flower.cart.domain.CartItemOption</class>
        
        <!-- Delivery Entities -->
        <class>com.flower.delivery.domain.Delivery</class>
        
        <!-- Member Entities -->
        <class>com.flower.member.domain.Member</class>
        <class>com.flower.member.domain.Address</class>
        <class>com.flower.member.domain.PointHistory</class>
        
        <!-- Order Entities -->
        <class>com.flower.order.domain.Order</class>
        <class>com.flower.order.domain.OrderItem</class>
        <class>com.flower.order.domain.OrderItemOption</class>
        
        <!-- Product Entities -->
        <class>com.flower.product.domain.Product</class>
        <class>com.flower.product.domain.ProductOption</class>
        <class>com.flower.product.domain.ProductAddon</class>
        <class>com.flower.product.domain.ProductImage</class>
    </persistence-unit>

</persistence>
